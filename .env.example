# MQTT Configuration
# Copy this file to .env and update with your values

# MQTT Broker Host (IP address of your Raspbian VM)
MQTT_HOST=192.168.56.102

# MQTT Port (1883 for plain, 8883 for TLS)
MQTT_PORT=8883

# Enable TLS/SSL (true/false)
MQTT_USE_TLS=true

# Path to CA certificate file (for TLS)
MQTT_CA_CERTS=C:\Users\NURMIZAN QISTINA\Desktop\fyp\iot-secure-water-monitor\certs\ca-cert.pem

# TLS Insecure Mode (skip certificate validation - for testing only!)
MQTT_TLS_INSECURE=true

# MQTT Topics
MQTT_KEYS_TOPIC=keys/+/public
MQTT_PROVISION_TOPIC_BASE=provision
